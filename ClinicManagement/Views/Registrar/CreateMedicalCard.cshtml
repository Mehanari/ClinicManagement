@using ClinicManagement.Models.Entities
@model ClinicManagement.Models.ViewModels.CreateMedicalCardViewModel

@{
    ViewData["Title"] = "Створення медичної картки";
    var genders = ViewData["Genders"] as List<Gender>;
    var identificationTypes = ViewData["IdentificationTypes"] as List<IdentificationType>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Створити медичну картку</h2>
            <div class="card">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <form asp-action="CreateMedicalCard" method="post">
                        <h4 class="mb-3">Персональні дані</h4>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Name" class="form-label">Ім’я</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Surname" class="form-label">Прізвище</label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Patronymic" class="form-label">По батькові</label>
                                <input asp-for="Patronymic" class="form-control" />
                                <span asp-validation-for="Patronymic" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Дата народження</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="GenderId" class="form-label">Стать</label>
                                <select asp-for="GenderId" class="form-select">
                                    <option value="">Оберіть стать</option>
                                    @foreach (var gender in genders)
                                    {
                                        <option value="@gender.Id">@gender.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="GenderId" class="text-danger"></span>
                            </div>
                        </div>

                        <h4 class="mb-3 mt-4">Ідентифікація</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Identifier" class="form-label">Ідентифікатор</label>
                                <input asp-for="Identifier" class="form-control" />
                                <span asp-validation-for="Identifier" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdentificationTypeId" class="form-label">Тип ідентифікації</label>
                                <select asp-for="IdentificationTypeId" class="form-select">
                                    <option value="">Оберіть тип</option>
                                    @foreach (var type in identificationTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="IdentificationTypeId" class="text-danger"></span>
                            </div>
                        </div>

                        <h4 class="mb-3 mt-4">Контактна інформація</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Workplace" class="form-label">Місце роботи</label>
                                <input asp-for="Workplace" class="form-control" />
                                <span asp-validation-for="Workplace" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label">Адреса</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Електронна пошта</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">Телефон</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-3">Створити</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}